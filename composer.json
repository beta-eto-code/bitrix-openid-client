{
    "name": "beta/bitrix-openid-client",
    "description": "OpenId client for Bitrix",
    "type": "lib",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Nesterov",
            "email": "alex19pov31@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "beta/bitrix-psr7": "^1.0",
        "beta/bitrix-psr18": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Bitrix\\Openid\\Client\\": "src/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.20"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 ./src/",
        "analyze": "psalm --show-info=true"
    }
}
